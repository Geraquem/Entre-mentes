<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.25"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_top_number"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/august_shining"
            tools:text="37" />

        <TextView
            android:id="@+id/tv_bottom_number"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/august_shining"
            tools:text="51" />

        <TextView
            android:id="@+id/tv_points"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hina_ming"
            android:textColor="@color/dark_grey"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="12 pts" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/discovered"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ll_main"
        app:layout_constraintLeft_toLeftOf="@id/ll_main"
        app:layout_constraintRight_toRightOf="@id/ll_main"
        app:layout_constraintTop_toTopOf="@id/ll_main"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/tv_round"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/august_shining"
            android:textColor="@color/dark_grey"
            android:textSize="28sp"
            tools:text="3" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>