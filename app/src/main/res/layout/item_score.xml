<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_points"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hina_ming"
            android:textColor="@color/dark_grey"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="12" />

        <TextView
            android:id="@+id/tv_pts_text"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/hina_ming"
            android:text="@string/scoreboard_pts"
            android:textColor="@color/dark_grey"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/discovered"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="@id/ll_main"
        app:layout_constraintLeft_toLeftOf="@id/ll_main"
        app:layout_constraintRight_toRightOf="@id/ll_main"
        app:layout_constraintTop_toTopOf="@id/ll_main"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_round"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kineks"
            android:textColor="@color/dark_grey"
            tools:text="3" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/barrier"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_white_box"
        android:backgroundTint="@color/background_black"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>