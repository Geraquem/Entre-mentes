<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/cl_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_range_left"
            style="@style/MediumTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.475"
            android:fontFamily="@font/alphazet"
            android:gravity="start"
            android:paddingStart="16dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            tools:text="FrÃ­o" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05" />

        <TextView
            android:id="@+id/tv_range_right"
            style="@style/MediumTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.475"
            android:fontFamily="@font/alphazet"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:textColor="@color/dark_orange"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            tools:text="Calor" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_long_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gl_center"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/blue" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:contentDescription="@string/content_description"
            android:scaleX="-1"
            android:src="@drawable/ic_long_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gl_center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/dark_orange" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>