<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp">

    <LinearLayout
        android:id="@+id/ll_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_percent_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:fontFamily="@font/august_shining"
            android:gravity="center"
            android:text="@string/fifty"
            android:textColor="@color/blue"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/tv_percent_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:fontFamily="@font/august_shining"
            android:gravity="center"
            android:text="@string/fifty"
            android:textColor="@color/dark_orange"
            android:textSize="42sp" />

    </LinearLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/bg_slider_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:enabled="false"
        android:stepSize="1"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_numbers"
        app:thumbColor="@color/transparent"
        app:thumbRadius="0dp"
        app:thumbStrokeColor="@color/transparent"
        app:thumbTrackGapSize="0.1dp"
        app:tickVisible="false"
        app:trackColorActive="@color/dark_orange"
        app:trackColorInactive="@color/blue"
        app:trackHeight="24dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/bg_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:enabled="false"
        android:stepSize="1"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_numbers"
        app:thumbColor="@color/transparent"
        app:thumbTrackGapSize="0.1dp"
        app:thumbWidth="0dp"
        app:tickVisible="false"
        app:trackColorActive="@color/blue"
        app:trackColorInactive="@color/dark_orange"
        app:trackHeight="24dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:stepSize="1"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_numbers"
        app:thumbRadius="8dp"
        app:tickVisible="false"
        app:trackColor="@color/transparent"
        app:trackHeight="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>