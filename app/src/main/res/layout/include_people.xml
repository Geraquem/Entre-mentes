<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_human_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gl_center"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_human_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gl_center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/dark_orange" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/et_player_blue"
            style="@style/MediumTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:autofillHints="null"
            android:background="@null"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="@string/name_blue"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:lines="1"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue_hint"
            android:textStyle="bold"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/et_player_orange"
            style="@style/MediumTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:autofillHints="null"
            android:background="@null"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="@string/name_orange"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:lines="1"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:textColor="@color/dark_orange"
            android:textColorHint="@color/orange_hint"
            android:textStyle="bold"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opinion_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:weightSum="1">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_center2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <LinearLayout
            android:id="@+id/ll_percent_one_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gl_center2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/percent_one_blue"
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kineks"
                android:text="@string/fifty"
                android:textColor="@color/blue"
                android:textSize="26sp" />

            <TextView
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kineks"
                android:gravity="center"
                android:text="@string/percent"
                android:textColor="@color/blue"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description"
            android:elevation="@dimen/small"
            android:gravity="center"
            android:src="@drawable/ic_player_one"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_percent_one_orange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gl_center2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/percent_one_orange"
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kineks"
                android:text="@string/fifty"
                android:textColor="@color/dark_orange"
                android:textSize="26sp" />

            <TextView
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kineks"
                android:gravity="center"
                android:text="@string/percent"
                android:textColor="@color/dark_orange"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ic_question_one_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="0"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_question"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/ll_percent_one_blue"
            app:layout_constraintRight_toRightOf="@id/ll_percent_one_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/ic_question_one_orange"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="0"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_question"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/ll_percent_one_orange"
            app:layout_constraintRight_toRightOf="@id/ll_percent_one_orange"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/dark_orange" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opinion_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:weightSum="1">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_center3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <LinearLayout
            android:id="@+id/ll_percent_two_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gl_center3"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/percent_two_blue"
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kineks"
                android:text="@string/fifty"
                android:textColor="@color/blue"
                android:textSize="26sp" />

            <TextView
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kineks"
                android:gravity="center"
                android:text="@string/percent"
                android:textColor="@color/blue"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description"
            android:gravity="center"
            android:src="@drawable/ic_player_two"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_percent_two_orange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:alpha="0"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gl_center3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/percent_two_orange"
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kineks"
                android:text="@string/fifty"
                android:textColor="@color/dark_orange"
                android:textSize="26sp" />

            <TextView
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kineks"
                android:gravity="center"
                android:text="@string/percent"
                android:textColor="@color/dark_orange"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ic_question_two_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="1"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_question"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/ll_percent_two_blue"
            app:layout_constraintRight_toRightOf="@id/ll_percent_two_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/ic_question_two_orange"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="1"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_question"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/ll_percent_two_orange"
            app:layout_constraintRight_toRightOf="@id/ll_percent_two_orange"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/dark_orange" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>