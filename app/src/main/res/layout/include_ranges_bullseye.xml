<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slider"
    android:baselineAligned="false"
    android:weightSum="9.5">

    <FrameLayout
        android:id="@+id/one_left_bullseye"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@color/blue">

        <TextView
            style="@style/SmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/manaspace"
            android:gravity="center"
            android:text="@string/ranges_points_one" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/two_left_bullseye"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/dark_orange">

        <TextView
            style="@style/SmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/manaspace"
            android:gravity="center"
            android:text="@string/ranges_points_two" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/center_bullseye"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:background="@color/dark_green">

        <TextView
            style="@style/SmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/manaspace"
            android:gravity="center"
            android:text="@string/ranges_points_five" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/two_right_bullseye"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/dark_orange">

        <TextView
            style="@style/SmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/manaspace"
            android:gravity="center"
            android:text="@string/ranges_points_two" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/one_right_bullseye"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@color/blue">

        <TextView
            style="@style/SmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/manaspace"
            android:gravity="center"
            android:text="@string/ranges_points_one" />

    </FrameLayout>

</LinearLayout>